# Copy this file to .env and fill in real values
# NEVER commit .env to Git!

DEBUG=True
SECRET_KEY=generate-with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DATABASE_URL=sqlite:///db.sqlite3
ALLOWED_HOSTS=localhost,127.0.0.1

# SMM Provider
SMM_PROVIDER_URL=https://engainsmedia.com/api/v2
SMM_PROVIDER_KEY=your-api-key-here

# Redis (optional for dev, required for production)
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=30
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Squad Payment Gateway
SQUAD_SECRET_KEY=your-squad-secret-key
SQUAD_PUBLIC_KEY=your-squad-public-key
SQUAD_BASE_URL=https://sandbox-api-d.squadco.com

# Email (use console for dev, smtp for production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=Caryvn <noreply@caryvn.com>
